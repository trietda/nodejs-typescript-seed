{
  "name": "nodejs-typescript-seed",
  "version": "1.0.0",
  "description": "A template for kickstart big project",
  "main": "index.js",
  "keywords": [],
  "author": "Triet dang",
  "license": "MIT",
  "scripts": {
    "test": "jest --selectProjects unit integration --",
    "test:unit": "jest --selectProjects unit --",
    "test:api": "jest --selectProjects api --runInBand",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "clean": "del-cli build",
    "build": "tsc -b src",
    "serve": "tsc -b src -w & nodemon build/index.js",
    "start": "npm run clean && npm run build && npm run serve",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run build && npm run test"
    }
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.17",
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/config": "0.0.38",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.6.0",
    "ajv": "^7.0.4",
    "ajv-errors": "^2.0.0",
    "ajv-formats": "^1.5.1",
    "amqplib": "^0.6.0",
    "async-mqtt": "^2.6.1",
    "bcrypt": "^5.0.0",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "config": "^3.3.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "error": "^10.4.0",
    "express": "^4.17.1",
    "fast-safe-stringify": "^2.0.7",
    "logform": "^2.2.0",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  }
}
